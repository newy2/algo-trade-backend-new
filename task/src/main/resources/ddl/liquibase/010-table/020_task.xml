<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <property name="currentTable" value="task" global="false"/>
    <property name="currentTableComment" value="작업" global="false"/>

    <property name="referenceTable" value="users" global="false"/>

    <changeSet id="2026-01-25-001" author="newy">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="${referenceTable}"/>
        </preConditions>

        <createTable tableName="${currentTable}" remarks="${currentTableComment}">
            <!-- PK, FK -->
            <column name="id" type="BIGINT" autoIncrement="true" remarks="${currentTableComment} ID">
                <constraints primaryKey="true" primaryKeyName="pk_${currentTable}"/>
            </column>

            <!-- 일반 필드 -->
            <column name="title" type="VARCHAR(255)" remarks="제목">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT" remarks="설명"/>
            <column name="status" type="VARCHAR(20)" remarks="상태 (WAITING, IN_PROGRESS, DONE)">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="VARCHAR(10)" remarks="우선순위 (LOW, MEDIUM, HIGH)"/>
            <column name="start_at" type="${dateTimeType}" remarks="시작일"/>
            <column name="end_at" type="${dateTimeType}" remarks="종료일"/>
            <column name="version" type="BIGINT" remarks="낙관적 lock 버전" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <!-- 생성/변경 일시 -->
            <column name="created_at" type="${dateTimeType}" defaultValueDate="${defaultDateTimeValue}" remarks="생성일시">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT" remarks="생성자 ID">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="${dateTimeType}" defaultValueDate="${defaultDateTimeValue}" remarks="생성일시">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="BIGINT" remarks="변경자 ID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- 검색용 인덱스 -->
        <createIndex indexName="idx_${currentTable}__status_priority" tableName="${currentTable}">
            <column name="status"/>
            <column name="priority"/>
        </createIndex>
        <createIndex indexName="idx_${currentTable}__status" tableName="${currentTable}">
            <column name="status"/>
        </createIndex>
        <createIndex indexName="idx_${currentTable}__priority" tableName="${currentTable}">
            <column name="priority"/>
        </createIndex>
        <createIndex indexName="idx_${currentTable}__start_at" tableName="${currentTable}">
            <column name="start_at"/>
        </createIndex>
        <createIndex indexName="idx_${currentTable}__end_at" tableName="${currentTable}">
            <column name="end_at"/>
        </createIndex>

        <!-- pro 모드 대체 로직  -->
        <sql>
            <!-- 이건 지워도 되겠다 -->
            ALTER TABLE ${currentTable}
                ADD CONSTRAINT chk_${currentTable}_status CHECK (status IN ('WAITING','IN_PROGRESS','DONE'));
            ALTER TABLE ${currentTable}
                ADD CONSTRAINT chk_${currentTable}_priority CHECK (priority IN ('LOW','MEDIUM','HIGH'));
        </sql>
    </changeSet>

</databaseChangeLog>
